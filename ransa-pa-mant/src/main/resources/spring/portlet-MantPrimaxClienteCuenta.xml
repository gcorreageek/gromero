<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
                  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	<bean id="defaultExceptionHandler" parent="defaultExceptionHandlerTemplate" />
	<bean  class="pe.com.ransa.portal.carga.controller.MantPrimaxClienteCuentaController"> </bean>
	<bean id="defaultExceptionHandlerTemplate" class="pe.com.ransa.portal.carga.util.SWPAMappingExceptionResolver" abstract="true">
		<property name="defaultErrorView" value="error" />
		<property name="exceptionMappings">
			<props>
				<prop key="java.lang.Throwable">error</prop>
			</props>
		</property>
	</bean> 
	<context:annotation-config />  
	
</beans>